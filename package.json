{
  "publisher": "ntnyq",
  "name": "magic-comment",
  "displayName": "Magic Comment",
  "preview": true,
  "type": "commonjs",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@9.15.2",
  "description": "Add annotations to magic comments",
  "keywords": [],
  "license": "MIT",
  "author": {
    "name": "ntnyq",
    "email": "ntnyq13@gmail.com"
  },
  "homepage": "https://github.com/ntnyq/magic-comment",
  "repository": {
    "type": "github",
    "url": "https://github.com/ntnyq/magic-comment.git"
  },
  "bugs": {
    "url": "https://github.com/ntnyq/magic-comment/issues/new"
  },
  "main": "./dist/index.js",
  "icon": "./res/logo.png",
  "files": [
    "LICENSE",
    "dist/*",
    "res/*"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "NODE_ENV=development tsup --watch",
    "generate:meta": "vscode-ext-gen --output src/meta.ts",
    "lint": "eslint .",
    "pack": "vsce package --no-dependencies",
    "prepare": "husky",
    "release": "run-s release:check release:version release:publish",
    "release:build": "run-s generate:meta build",
    "release:check": "run-s lint typecheck",
    "release:publish": "vsce publish --no-dependencies",
    "release:version": "bumpp --all --execute='pnpm release:build'",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@ntnyq/utils": "^0.4.3",
    "reactive-vscode": "^0.2.9"
  },
  "devDependencies": {
    "@ntnyq/eslint-config": "^3.11.0",
    "@ntnyq/prettier-config": "^1.22.0",
    "@types/node": "^22.10.3",
    "@types/vscode": "^1.96.0",
    "@vscode/vsce": "^3.2.1",
    "bumpp": "^9.9.2",
    "eslint": "^9.17.0",
    "husky": "^9.1.7",
    "nano-staged": "^0.8.0",
    "npm-run-all2": "^7.0.2",
    "prettier": "3.3.3",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vscode-ext-gen": "^0.5.5"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "category": "Magic Comment",
        "command": "magic-comment.getLanguageConfig",
        "title": "getLanguageConfig"
      }
    ],
    "configuration": {
      "properties": {
        "magic-comment.annotation": {
          "additionalProperties": false,
          "description": "Magic comment annotation",
          "properties": {
            "after": {
              "additionalProperties": false,
              "properties": {
                "contentText": {
                  "default": "ðŸš€",
                  "type": "string"
                },
                "margin": {
                  "default": "0 0 0 0.5em",
                  "type": "string"
                }
              },
              "type": "object"
            },
            "color": {
              "default": "rgb(255, 189, 42)",
              "description": "Color of annotation",
              "format": "color",
              "type": "string"
            }
          },
          "type": "object"
        },
        "magic-comment.disabledCategories": {
          "default": [],
          "description": "Disabled by comments category",
          "items": {
            "type": "string"
          },
          "type": "array",
          "uniqueItems": true
        },
        "magic-comment.disabledNames": {
          "default": [],
          "description": "Disabled by comments name",
          "items": {
            "type": "string"
          },
          "type": "array",
          "uniqueItems": true
        },
        "magic-comment.enable": {
          "default": true,
          "description": "Enable extension",
          "type": "boolean"
        },
        "magic-comment.excludeFiles": {
          "default": [],
          "description": "Exclude files",
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "magic-comment.includeFiles": {
          "default": [],
          "description": "Include files",
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "magic-comment.supportLanguages": {
          "default": [],
          "description": "Enabled in languages",
          "items": {
            "type": "string"
          },
          "type": "array",
          "uniqueItems": true
        },
        "magic-comment.userComments": {
          "default": [],
          "description": "User defined magic comments",
          "items": {
            "additionalProperties": false,
            "properties": {
              "category": {
                "type": "string"
              },
              "description": {
                "type": "string"
              },
              "examples": {
                "default": [],
                "items": {
                  "type": "string"
                },
                "type": "array"
              },
              "language": {
                "default": [],
                "items": {
                  "type": "string"
                },
                "type": "array",
                "uniqueItems": true
              },
              "name": {
                "type": "string"
              },
              "pattern": {
                "type": "string"
              },
              "url": {
                "type": "string"
              }
            },
            "required": [
              "name",
              "pattern"
            ],
            "type": "object"
          },
          "type": "array"
        }
      },
      "title": "Magic Comment"
    }
  },
  "categories": [
    "Other"
  ],
  "engines": {
    "vscode": "^1.96.0"
  },
  "nano-staged": {
    "*.{js,ts,mjs,cjs,md,json,yml,yaml}": "eslint --fix"
  }
}
