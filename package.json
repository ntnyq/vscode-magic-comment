{
  "publisher": "ntnyq",
  "name": "vscode-magic-comment",
  "displayName": "VSCode Magic Comment",
  "preview": true,
  "type": "module",
  "version": "0.0.6",
  "private": true,
  "packageManager": "pnpm@10.18.1",
  "description": "Add annotations to magic comments",
  "keywords": [],
  "license": "MIT",
  "author": {
    "name": "ntnyq",
    "email": "ntnyq13@gmail.com"
  },
  "homepage": "https://github.com/ntnyq/vscode-magic-comment",
  "repository": {
    "type": "github",
    "url": "https://github.com/ntnyq/vscode-magic-comment.git"
  },
  "bugs": {
    "url": "https://github.com/ntnyq/vscode-magic-comment/issues/new"
  },
  "main": "./dist/index.js",
  "icon": "./res/logo.png",
  "files": [
    "LICENSE",
    "dist/*",
    "res/*"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "NODE_ENV=development tsdown --watch",
    "generate:meta": "vscode-ext-gen --output src/meta.ts --scope magic-comment",
    "lint": "eslint",
    "pack": "vsce package --no-dependencies",
    "prepare": "husky",
    "release": "run-s release:check release:version release:publish",
    "release:build": "run-s generate:meta build",
    "release:check": "run-s lint typecheck",
    "release:publish": "vsce publish --no-dependencies",
    "release:version": "bumpp --all --execute='pnpm release:build'",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@ntnyq/utils": "^0.9.2",
    "reactive-vscode": "^0.3.3"
  },
  "devDependencies": {
    "@ntnyq/eslint-config": "^5.6.0",
    "@ntnyq/prettier-config": "^3.0.1",
    "@types/node": "^24.7.0",
    "@types/vscode": "^1.104.0",
    "@vscode/vsce": "^3.6.2",
    "bumpp": "^10.3.1",
    "eslint": "^9.37.0",
    "husky": "^9.1.7",
    "nano-staged": "^0.8.0",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.6.2",
    "tsdown": "^0.15.6",
    "typescript": "^5.9.3",
    "vscode-ext-gen": "^1.3.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "category": "Magic Comment",
        "command": "magic-comment.getLanguageConfig",
        "title": "getLanguageConfig"
      }
    ],
    "configuration": {
      "properties": {
        "magic-comment.annotation": {
          "additionalProperties": false,
          "description": "Magic comment annotation",
          "properties": {
            "after": {
              "additionalProperties": false,
              "properties": {
                "contentText": {
                  "default": "ðŸš€",
                  "type": "string"
                },
                "margin": {
                  "default": "0 0 0 0.5em",
                  "type": "string"
                }
              },
              "type": "object"
            },
            "color": {
              "default": "rgb(255, 189, 42)",
              "description": "Color of annotation",
              "format": "color",
              "type": "string"
            }
          },
          "type": "object"
        },
        "magic-comment.customMagicComments": {
          "default": [],
          "description": "User defined magic comments",
          "items": {
            "additionalProperties": false,
            "properties": {
              "category": {
                "type": "string"
              },
              "description": {
                "type": "string"
              },
              "name": {
                "type": "string"
              },
              "patterns": {
                "oneOf": [
                  {
                    "type": "string"
                  },
                  {
                    "items": {
                      "type": "string"
                    },
                    "minItems": 1,
                    "type": "array"
                  }
                ]
              },
              "url": {
                "type": "string"
              }
            },
            "required": [
              "name",
              "patterns"
            ],
            "type": "object"
          },
          "type": "array"
        },
        "magic-comment.disabledCategories": {
          "default": [],
          "description": "Disabled by comments category",
          "items": {
            "type": "string"
          },
          "type": "array",
          "uniqueItems": true
        },
        "magic-comment.disabledNames": {
          "default": [],
          "description": "Disabled by comments name",
          "items": {
            "type": "string"
          },
          "type": "array",
          "uniqueItems": true
        },
        "magic-comment.enable": {
          "default": true,
          "description": "Enable extension",
          "type": "boolean"
        },
        "magic-comment.ignorePaths": {
          "default": [],
          "description": "Ignored paths pattern",
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "magic-comment.languages": {
          "default": [
            "javascript",
            "javascriptreact",
            "markdown",
            "typescript",
            "typescriptreact"
          ],
          "description": "Enabled by language ids",
          "items": {
            "type": "string"
          },
          "type": "array",
          "uniqueItems": true
        }
      },
      "title": "Magic Comment"
    }
  },
  "categories": [
    "Other"
  ],
  "engines": {
    "vscode": "^1.104.3"
  },
  "nano-staged": {
    "*.{js,ts,mjs,cjs,md,yml,yaml,json}": "eslint --fix"
  }
}
