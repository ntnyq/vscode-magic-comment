{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ESnext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "types": ["node"],
    "resolveJsonModule": true,
    "sourceMap": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true
  }
}
